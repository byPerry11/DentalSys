<Window x:Class="Presentacion.Views.ConsultaInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Detalles de Consulta" Height="600" Width="450" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F4F6F6">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <StackPanel>
            <TextBlock Text="InformaciÃ³n de Consulta" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <TextBlock Text="Fecha" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtFecha" Height="35"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="Precio" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtPrecio" Height="35"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Tratamiento" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtTratamiento" Height="35" Margin="0,0,0,15"/>

            <TextBlock Text="Paciente" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPaciente" Height="35" Margin="0,0,0,15"/>

            <TextBlock Text="Dentista" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtDentista" Height="35" Margin="0,0,0,15"/>

            <TextBlock Text="Notas" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtNotas" Height="80" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>

            <Button Content="Cerrar" Width="100" Height="35" HorizontalAlignment="Center" Click="BtnCerrar_Click"
                    Background="#2980B9" Foreground="White" BorderThickness="0" Margin="0,10,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
