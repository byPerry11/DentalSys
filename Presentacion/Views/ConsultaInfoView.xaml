<UserControl x:Class="Presentacion.Views.ConsultaInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignHeight="550" Width="500">
    <Border Background="White" CornerRadius="10" Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Color="Black" Opacity="0.2"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="InformaciÃ³n de Consulta" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Fecha y Precio en Grid -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Fecha" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtFecha" Height="35" IsReadOnly="True" Background="#ECF0F1" 
                                     BorderBrush="#BDC3C7" BorderThickness="1" Padding="10,0" 
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Precio" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtPrecio" Height="35" IsReadOnly="True" Background="#ECF0F1" 
                                     BorderBrush="#BDC3C7" BorderThickness="1" Padding="10,0" 
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Tratamiento -->
                    <TextBlock Text="Tratamiento" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,10,0,5"/>
                    <TextBox x:Name="TxtTratamiento" Height="35" IsReadOnly="True" Background="#ECF0F1" 
                             BorderBrush="#BDC3C7" BorderThickness="1" Padding="10,0" 
                             VerticalContentAlignment="Center" Margin="0,0,0,10"/>

                    <!-- Paciente -->
                    <TextBlock Text="Paciente" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtPaciente" Height="35" IsReadOnly="True" Background="#ECF0F1" 
                             BorderBrush="#BDC3C7" BorderThickness="1" Padding="10,0" 
                             VerticalContentAlignment="Center" Margin="0,0,0,10"/>

                    <!-- Dentista -->
                    <TextBlock Text="Dentista" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtDentista" Height="35" IsReadOnly="True" Background="#ECF0F1" 
                             BorderBrush="#BDC3C7" BorderThickness="1" Padding="10,0" 
                             VerticalContentAlignment="Center" Margin="0,0,0,10"/>

                    <!-- Notas -->
                    <TextBlock Text="Notas" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtNotas" Height="100" IsReadOnly="True" Background="#ECF0F1" 
                             BorderBrush="#BDC3C7" BorderThickness="1" Padding="10" 
                             TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" 
                             VerticalContentAlignment="Top"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Button -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cerrar" Width="100" Height="35" Click="BtnCerrar_Click"
                        Background="#95A5A6" Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
