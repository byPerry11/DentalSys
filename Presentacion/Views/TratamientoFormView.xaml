<Window x:Class="Presentacion.Views.TratamientoFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tratamiento" Height="400" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F4F6F6">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="25">
        <StackPanel>
            <TextBlock Text="Detalles del Tratamiento" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,8" HorizontalAlignment="Center"/>

            <TextBlock Text="Nombre" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtNombre" Height="35" Margin="0,0,0,15"/>

            <TextBlock Text="Precio" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPrecio" Height="35" Margin="0,0,0,15"/>

            <TextBlock Text="DescripciÃ³n" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtDescripcion" Height="50" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top" Padding="10" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancelar" Width="100" Height="35" Margin="0,0,10,0" Click="BtnCancel_Click"
                        Background="White" Foreground="#7F8C8D" BorderBrush="#BDC3C7" BorderThickness="1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Guardar" Width="100" Height="35" Click="BtnSave_Click"
                        Background="#27AE60" Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
