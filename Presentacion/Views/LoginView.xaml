<Window x:Class="Presentacion.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion.Views"
        xmlns:viewmodels="clr-namespace:Presentacion.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
        mc:Ignorable="d"
        Title="DentalSys Login" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">





    <Border CornerRadius="20" Background="Transparent">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="209*"/>
                <RowDefinition Height="241*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
                <!-- Formulario -->
            </Grid.ColumnDefinitions>

            <Image Source="pack://application:,,,/assets/diente.png" 
                    Grid.ColumnSpan="2" Stretch="UniformToFill" Opacity="0.1" Margin="20" Grid.RowSpan="2"/>
            <!-- Lado Izquierdo: Branding -->
            <Border Grid.Column="0" Background="#2980B9" CornerRadius="20,0,0,20" Grid.RowSpan="2">

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="pack://application:,,,/assets/diente.png" Width="100" Height="107" RenderTransformOrigin="0.483,0.206"/>
                    <TextBlock Text="DentalSys" Foreground="White" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Gestión Clínica Integral" Foreground="#A9CCE3" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0">
                <Button Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="16" Cursor="Hand"
                        Click="CloseApp_Click">
                    <Image Source="pack://application:,,,/assets/icons/circle-x.png" Stretch="UniformToFill"/>
                </Button>
            </StackPanel>

            <!-- Lado Derecho: Formulario -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="40,74,40,0" Grid.RowSpan="2">
                <TextBlock Text="Iniciar Sesión" FontSize="26" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <!-- Usuario -->
                <TextBlock Text="Usuario" Foreground="Gray" Margin="0,0,0,5"/>
                <!-- El Binding a Username es fundamental -->
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Height="35" Padding="5" VerticalContentAlignment="Center" BorderBrush="#DDD"/>

                <!-- Contraseña -->
                <TextBlock Text="Contraseña" Foreground="Gray" Margin="0,15,0,5"/>
                <!-- Nota el x:Name="txtPassword" -->
                <PasswordBox x:Name="txtPassword" Height="35" Padding="5" VerticalContentAlignment="Center" BorderBrush="#DDD"/>

                <!-- Botón Login -->
                <!-- Nota: CommandParameter pasa el control PasswordBox completo al ViewModel -->
                <Button Content="INGRESAR" Height="45" Margin="0,30,0,0" 
                        Background="#2980B9" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        Command="{Binding LoginCommand}" 
                        CommandParameter="{Binding ElementName=txtPassword}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>


                <Button Content="Salir"  Background="Transparent" Foreground="Gray" Margin="0,15,0,0" BorderThickness="1" Click="CloseApp_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
