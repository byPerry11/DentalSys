<UserControl x:Class="Presentacion.Views.RecepcionistView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion.Views"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Dentista (Color Azul Médico) -->
        <Border Grid.Column="0" Background="#8E44AD">
            <StackPanel Margin="10">
                <TextBlock Text="Usuario" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,100,0,10" HorizontalAlignment="Center"/>
                <TextBlock Text="Odontología General" Foreground="#D6EAF8" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <Button Content="Eliminar cita" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0"/>
                <Button Content="Editar cita" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0"/>
                <Button Content="Cerrar Sesion" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Contenido Dentista -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border DockPanel.Dock="Top" Height="60" Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                <!-- Top Bar Recepción -->
                <Border DockPanel.Dock="Top" Height="60" Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                    <Grid Margin="20,0">
                        <TextBlock Text="Recepción DentalSys" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="#8E44AD"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Button Content="+ Nueva Cita" Background="#8E44AD" Foreground="White" Padding="15,8" Margin="5" BorderThickness="0"/>
                            <Button Content="+ Registrar Paciente" Background="#9B59B6" Foreground="White" Padding="15,8" Margin="5" BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>

            <!-- Lista de Citas -->
            <!--DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column" 
                      Background="White" BorderThickness="1" BorderBrush="#EEE">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Hora" Width="80" Binding="{Binding Hora}"/>
                    <DataGridTextColumn Header="Paciente" Width="*" Binding="{Binding NombrePaciente}"/>
                    <DataGridTextColumn Header="Motivo" Width="150" Binding="{Binding Motivo}"/>
                    <DataGridTextColumn Header="Estado" Width="100" Binding="{Binding Estado}"/>
                    <DataGridTemplateColumn Header="Acción" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Atender" Background="#27AE60" Foreground="White" Padding="5,2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid -->
        </Grid>
    </Grid>
</UserControl>
