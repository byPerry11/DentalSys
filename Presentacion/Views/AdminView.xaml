<UserControl x:Class="Presentacion.Views.AdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion.Views"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="ColumnHeaderHeight" Value="45"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#95A5A6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#EEE"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F6FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SideMenuColumn" Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Admin -->
        <Border Grid.Column="0" Background="#5C9DFF
">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="10">
                    <!-- Botón Hamburguesa -->
                    <Button x:Name="BtnHamburger" Width="30" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="16" Cursor="Hand"
                        HorizontalAlignment="Right" Margin="0,10,0,0" Click="BtnHamburger_Click">
                        <Image Source="pack://application:,,,/assets/icons/dashboard.png" Stretch="Uniform"/>
                    </Button>
                    <Image x:Name="ImgProfile" Source="pack://application:,,,/assets/icons/person.png" Width="60" Height="66" HorizontalAlignment="Center" Margin="0,20,0,10"/>

                    <TextBlock x:Name="TxtAdminName" Text="Admin " Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,5,0,10" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtAdminRole" Text="Odontologia general" Foreground="#D6EAF8" FontSize="12" HorizontalAlignment="Center" Margin="0, 0, 0, 30"/>

                    <!-- Botones de Navegación -->
                    <Button x:Name="BtnGestionUsuarios" Click="BtnGestionUsuariosClick" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15,0">
                        <TextBlock x:Name="TxtGestionUsuarios" Text="Gestión Usuarios" TextWrapping="NoWrap"/>
                    </Button>
                    <Button x:Name="BtnGestionPacientes" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15,0" Click="BtnGestionPacientesClick">
                        <TextBlock x:Name="TxtGestionPacientes" Text="Gestion de Pacientes" TextWrapping="NoWrap"/>
                    </Button>
                    <Button x:Name="BtnGestionCitas" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15,0" Click="BtnGestionCitasClick">
                        <TextBlock x:Name="TxtGestionCitas" Text="Gestión Citas" TextWrapping="NoWrap"/>
                    </Button>
                    <Button x:Name="BtnGestionAdministrador" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15,0" Click="BtnGestionAdministradorClick">
                        <TextBlock x:Name="TxtGestionAdministrador" Text="Gestion Administrador" TextWrapping="NoWrap"/>
                    </Button>
                    <Button x:Name="BtnGestionDentistas" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15,0" Click="BtnGestionDentistasClick">
                        <TextBlock x:Name="TxtGestionDentistas" Text="Gestion Dentistas" TextWrapping="NoWrap"/>
                    </Button>
                    <Button x:Name="BtnGestionRecepcionistas" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15,0" Click="BtnGestionRecepcionistasClick">
                        <TextBlock x:Name="TxtGestionRecepcionistas" Text="Gestion Recepcionistas" TextWrapping="NoWrap"/>
                    </Button>
                    <Button x:Name="BtnGestionConsultas" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15,0" Click="BtnGestionConsultasClick">
                        <TextBlock x:Name="TxtGestionConsultas" Text="Gestión Consultas" TextWrapping="NoWrap"/>
                    </Button>
                    <Button x:Name="BtnTratamientos" Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15,0" Click="BtnTratamientosClick">
                        <TextBlock x:Name="TxtTratamientos" Text="Tratamientos" TextWrapping="NoWrap"/>
                    </Button>
                    <Button x:Name="BtnCerrarSesion" Background="Transparent" Foreground="White" Height="35" HorizontalAlignment="Center" Click="BtnCerrarSesionClick" Margin="0,5" Padding="15, 0" BorderThickness="0">
                        <TextBlock x:Name="TxtCerrarSesion" Text="Cerrar Sesión" TextWrapping="NoWrap"/>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
          
                


                <TextBlock x:Name="HeaderTitle" Text="Resumen General" FontSize="24" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,20"/>

            <!-- Tarjetas de Resumen -->
<Grid x:Name="DashboardGrid" Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Columna de cards -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Card 1: Pacientes -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15" Height="110">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Color="#CCC" ShadowDepth="2" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Pacientes (Mes)" Foreground="#7F8C8D" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtNuevosPacientes" Text="0" FontSize="32" FontWeight="Bold" Foreground="#5C9DFF
" Margin="0,5,0,0"/>
                            </StackPanel>
                            <Image Grid.Column="1" Source="/assets/icons/person.png" Width="40" Opacity="0.2" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Card 2: Total Generado -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15" Height="110">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Color="#CCC" ShadowDepth="2" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Total Generado (Mes)" Foreground="#7F8C8D" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtTotalGenerado" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="#27AE60" Margin="0,5,0,0"/>
                            </StackPanel>
                            <Image Grid.Column="1" Source="/assets/icons/newspaper.png" Width="40" Opacity="0.2" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Card 3: Tratamiento Top -->
                    <Border Background="White" CornerRadius="10" Padding="20" Height="110">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Color="#CCC" ShadowDepth="2" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Tratamiento Top (Mes)" Foreground="#7F8C8D" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtTratamientoTop" Text="-" FontSize="20" FontWeight="Bold" Foreground="#E67E22" Margin="0,5,0,0" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                            <Image Grid.Column="1" Source="/assets/icons/dental.png" Width="40" Opacity="0.2" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Columna derecha para actividad -->
                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#CCC" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Log de Actividad Reciente" FontSize="16" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,15"/>

                        <DataGrid x:Name="LogsDataGrid" Grid.Row="1" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" HeadersVisibility="Column" BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Fecha/Hora" Binding="{Binding FechaHora, StringFormat='dd/MM/yyyy HH:mm'}" Width="140"/>
                                <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario}" Width="120"/>
                                <DataGridTextColumn Header="Acción" Binding="{Binding Accion}" Width="*"/>
                                <DataGridTemplateColumn Header="Detalle" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="#ECF0F1" CornerRadius="5" Padding="5,2" HorizontalAlignment="Center">
                                                <TextBlock Text="Ver" FontSize="11" Foreground="#7F8C8D"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <!-- DataGrid para Tratamientos -->
            <Grid x:Name="TratamientosContainer" Grid.Row="1" Visibility="Collapsed" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button  Name="BtnAgregarTratamiento" HorizontalAlignment="Right" Margin="0,0,0,10" Width="auto" Height="30" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnAgregarTratamiento_Click">
                    <Image Source="/assets/icons/dental.png"></Image>
                </Button>

                <Border Grid.Row="2" Background="White" CornerRadius="20" Padding="0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="50" Color="#DDD" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <DataGrid x:Name="TratamientosDataGrid" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="0" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="200"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                            <DataGridTemplateColumn Header="" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button  Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0"  Click="BtnEditarTratamiento_Click">
                                                <Image Source="/assets/icons/edit.png"></Image>
                                            </Button>

                                            <Button Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0"  Click="BtnEliminarTratamiento_Click">
                                                <Image Source="/assets/icons/circle-x.png"></Image>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
            <!-- Contenedor para Gestion de usuarios -->
            <Grid x:Name="UsuariosContainer" Grid.Row="1" Visibility="Collapsed" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button  HorizontalAlignment="Right" Width="auto" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnNuevoUsuario_Click">
                    <Image Source="/assets/icons/person-add.png"></Image>
                </Button>

                <!-- DataGrid para Usuarios -->

                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#DDD" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <DataGrid x:Name="UsuariosDataGrid" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Username}" Width="150"/>
                            <DataGridTextColumn Header="Rol" Binding="{Binding Role}" Width="130"/>
                            <DataGridTextColumn Header="Fecha Creación" Binding="{Binding FechaCreacion, StringFormat=d}" Width="130"/>
                            <DataGridTemplateColumn Header="" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button  Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0"  Click="BtnEditarUsuario_Click">
                                                <Image Source="/assets/icons/edit.png"></Image>
                                            </Button>

                                            <Button Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0"  Click="BtnEliminarUsuario_Click">
                                                <Image Source="/assets/icons/circle-x.png"></Image>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <!-- Contenedor de pacientes -->
            <Grid x:Name="PacientesContainer" Grid.Row="1" Visibility="Collapsed" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Bar: Search and Add Button -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Pacientes" VerticalAlignment="Center" FontSize="18" Foreground="#34495E" FontWeight="SemiBold" Margin="5,0,0,0"/>

                    <!-- Search Bar -->
                    <Border Grid.Column="1" Background="White" CornerRadius="20" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10,5" Width="300" Margin="0,0,10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/assets/icons/search.png" Grid.Column="0" Width="16" Height="16" Margin="0,0,10,0" Opacity="0.5"/>
                            <TextBox x:Name="TxtBuscarPacientes" Grid.Column="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" FontSize="14" Foreground="#555" TextChanged="TxtBuscarPacientes_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TextBox}">
                                                    <Grid>
                                                        <TextBlock Text="Buscar por nombre, email o teléfono..." Foreground="#AAA" Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="2,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" Background="Transparent"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!-- Add Button -->
                    <Button Grid.Column="2" HorizontalAlignment="Right" Width="auto" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnNuevoPaciente_Click">
                        <Image Source="/assets/icons/person-add.png"></Image>
                    </Button>
                </Grid>

                <!-- DataGrid para Pacientes -->
                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#DDD" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <DataGrid x:Name="PacientesDataGrid" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                            <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="110"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="220"/>
                            <DataGridTextColumn Header="Fecha Nacimiento" Binding="{Binding FechaNacimiento, StringFormat=d}" Width="150"/>
                            <DataGridTextColumn Header="Facturacion" Binding="{Binding Facturada}" Width="105"/>
                             <DataGridTemplateColumn Header="" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnEditarPaciente_Click">
                                                <Image Source="/assets/icons/edit.png"></Image>
                                            </Button>
                                            <Button Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnEliminarPaciente_Click">
                                                <Image Source="/assets/icons/circle-x.png"></Image>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
            
            <!-- Contenedor Administradores -->
            <Grid x:Name="AdministradoresContainer" Grid.Row="1" Visibility="Collapsed" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button HorizontalAlignment="Right" Width="auto" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnNuevoAdministrador_Click">
                    <Image Source="/assets/icons/person-add.png"></Image>
                </Button>

                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#DDD" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>

                    <DataGrid x:Name="AdministradoresDataGrid" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id_Administrador}" Width="60"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="200"/>
                            <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="130"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTemplateColumn Header="" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnEditarAdministrador_Click">
                                                <Image Source="/assets/icons/edit.png"></Image>
                                            </Button>
                                            <Button Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnEliminarAdministrador_Click">
                                                <Image Source="/assets/icons/circle-x.png"></Image>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <!-- Contenedor Recepcionistas -->
            <Grid x:Name="RecepcionistasContainer" Grid.Row="1" Visibility="Collapsed" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button HorizontalAlignment="Right" Width="auto" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnNuevoRecepcionista_Click">
                    <Image Source="/assets/icons/person-add.png"></Image>
                </Button>

                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#DDD" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>

                    <DataGrid x:Name="RecepcionistasDataGrid" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id_Recepcionista}" Width="60"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="200"/>
                            <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="130"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTemplateColumn Header="" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnEditarRecepcionista_Click">
                                                <Image Source="/assets/icons/edit.png"></Image>
                                            </Button>
                                            <Button Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnEliminarRecepcionista_Click">
                                                <Image Source="/assets/icons/circle-x.png"></Image>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <!-- Contenedor Dentistas -->
            <Grid x:Name="DentistasContainer" Grid.Row="1" Visibility="Collapsed" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button HorizontalAlignment="Right" Width="auto" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnNuevoDentista_Click">
                    <Image Source="/assets/icons/person-add.png"></Image>
                </Button>

                <!-- DataGrid para Dentistas -->
                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#DDD" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>

                    <DataGrid x:Name="DentistasDataGrid" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id_Dentista}" Width="50"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="180"/>
                            <DataGridTextColumn Header="Telefono" Binding="{Binding Telefono}" Width="120"/>
                            <DataGridTextColumn Header="Especialidad" Binding="{Binding Especialidad}" Width="180"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="220"/>
                            <DataGridTemplateColumn Header="" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnEditarDentista_Click">
                                                <Image Source="/assets/icons/edit.png"></Image>
                                            </Button>
                                            <Button Margin="1,0" Width="40" Background="Transparent" Foreground="White" BorderThickness="0" Click="BtnEliminarDentista_Click">
                                                <Image Source="/assets/icons/circle-x.png"></Image>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <!-- Contenedor Citas -->
            <Grid x:Name="CitasContainer" Grid.Row="1" Visibility="Collapsed" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header / Search -->
                    <RowDefinition Height="*"/>    <!-- Content -->
                </Grid.RowDefinitions>

                <!-- Top Bar: Search -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>    <!-- Spacer -->
                        <ColumnDefinition Width="Auto"/> <!-- Search -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Citas" VerticalAlignment="Center" FontSize="18" Foreground="#34495E" FontWeight="SemiBold" Margin="5,0,0,0"/>

                    <!-- Search Bar -->
                    <Border Grid.Column="1" Background="White" CornerRadius="20" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10,5" Width="300">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!--Image Source="/assets/icons/search.png" Grid.Column="0" Width="16" Height="16" Margin="0,0,10,0" Opacity="0.5"/-->
                            <TextBox x:Name="TxtBuscarCitas" Grid.Column="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" FontSize="14" Foreground="#555" TextChanged="TxtBuscarCitas_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TextBox}">
                                                    <Grid>
                                                        <TextBlock Text="Buscar por dentista o paciente..." Foreground="#AAA" Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="2,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" Background="Transparent"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Border>
                </Grid>

                <!-- DataGrid Citas -->
                <Border x:Name="BorderCitas" Grid.Row="1" Background="White" CornerRadius="8" Padding="0" Visibility="Visible">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#DDD" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <DataGrid x:Name="CitasDataGrid" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Paciente" Binding="{Binding PacienteNombre}" Width="*"/>
                            <DataGridTextColumn Header="Dentista" Binding="{Binding DentistaNombre}" Width="*"/>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding FechaHora, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                            <DataGridTemplateColumn Header="Estado" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="10,2" HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#E8F8F5"/> <!-- Default/Confirmed -->
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Estatus}" Value="Pendiente">
                                                            <Setter Property="Background" Value="#FEF9E7"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estatus}" Value="Cancelada">
                                                            <Setter Property="Background" Value="#FADBD8"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Estatus}" FontSize="12" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#27AE60"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Estatus}" Value="Pendiente">
                                                                <Setter Property="Foreground" Value="#F1C40F"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Estatus}" Value="Cancelada">
                                                                <Setter Property="Foreground" Value="#C0392B"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <!-- Contenedor Consultas -->
            <Grid x:Name="ConsultasContainer" Grid.Row="1" Visibility="Collapsed" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header / Search -->
                    <RowDefinition Height="*"/>    <!-- Content -->
                </Grid.RowDefinitions>

                <!-- Top Bar: Search -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>    <!-- Spacer -->
                        <ColumnDefinition Width="Auto"/> <!-- Search -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Consultas" VerticalAlignment="Center" FontSize="18" Foreground="#34495E" FontWeight="SemiBold" Margin="5,0,0,0"/>

                    <!-- Search Bar -->
                    <Border Grid.Column="1" Background="White" CornerRadius="20" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10,5" Width="300">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/assets/icons/search.png" Grid.Column="0" Width="16" Height="16" Margin="0,0,10,0" Opacity="0.5"/>
                            <TextBox x:Name="TxtBuscarConsultas" Grid.Column="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" FontSize="14" Foreground="#555" TextChanged="TxtBuscarConsultas_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TextBox}">
                                                    <Grid>
                                                        <TextBlock Text="Buscar por dentista o paciente..." Foreground="#AAA" Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="2,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" Background="Transparent"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Border>
                </Grid>

                <!-- DataGrid Consultas -->
                <Border x:Name="BorderConsultas" Grid.Row="1" Background="White" CornerRadius="8" Padding="0" Visibility="Visible">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#DDD" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <DataGrid x:Name="ConsultasDataGrid" Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" BorderThickness="0" MouseDoubleClick="ConsultasDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Tratamiento" Binding="{Binding TratamientoNombre}" Width="*"/>
                            <DataGridTextColumn Header="Paciente" Binding="{Binding PacienteNombre}" Width="*"/>
                            <DataGridTextColumn Header="Dentista" Binding="{Binding DentistaNombre}" Width="*"/>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat='dd/MM/yyyy HH:mm'}" Width="140"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Notas" Binding="{Binding Notas}" Width="200"/>
                            <DataGridTemplateColumn Header="Factura" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="BtnGenerarFactura_Click" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Generar factura PDF">
                                            <Image Source="/assets/icons/newspaper.png" Width="35" Height="35"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
