<UserControl x:Class="Presentacion.Views.DentistaFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="450" Width="500">

    <Border Background="White" CornerRadius="10" Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Color="Black" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Gestion de Dentista"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Nombre"
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="TxtNombre" Height="30" Padding="5"/>

                    <TextBlock Text="Telefono"
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="TxtTelefono" Height="30" Padding="5"/>

                    <TextBlock Text="Especialidad"
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="TxtEspecialidad" Height="30" Padding="5"/>

                    <TextBlock Text="Email"
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="TxtEmail" Height="30" Padding="5"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="Cancelar"
                        Width="100" Height="35"
                        Background="#95A5A6"
                        Foreground="White"
                        Margin="0,0,10,0"
                        Click="BtnCancelar_Click"/>
                <Button Content="Guardar"
                        Width="100" Height="35"
                        Background="#27AE60"
                        Foreground="White"
                        Click="BtnGuardar_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>